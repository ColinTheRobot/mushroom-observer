<%
  new_tab_set(:sort_by_header.t, @sorts)
  new_tab_set do
    add_tab_with_query(:list_place_names_map.t, :action => :map_locations)
    add_tab(:all_objects.t(:type => :location), :action => :list_locations)
    add_tabs(@links)
  end

  flash_error(@error) if @error and (!@objects or @objects.empty?)
%>

<%= paginate_block(@pages) do %>
  <% if @objects != [] %>
    <table class="table table-striped" width="100%">
      <% for desc in @objects || [] %>
        <tr>
          <td><%= link_with_query(desc.format_name.t,
                    :action => 'show_location_description',
                    :id => desc.id) %><td>
        </tr>
      <% end %>
    </table>
  <% end %>
<% end %>
