<%
  @title = :show_location_title.t(:name => @location.display_name)

  right_links = [
          link_with_query(:show_location_observations.t,
                          controller: :observer, action: :observations_at_location, id: @location.id),
          link_to(:all_objects.t(:type => :location), :action => 'list_locations'),
          link_with_query(:show_location_create.t, :action => 'create_location'),
          link_with_query(:show_location_edit.t, :action => 'edit_location',
                          :id => @location.id)
  ]
  if is_in_admin_mode?
   right_links <<  link_with_query(:show_location_destroy.t,
                          :action => 'destroy_location', :id => @location.id)
   right_links << link_with_query(:show_location_reverse.t,
                          :action => 'reverse_name_order', :id => @location.id)
  end
  @tabsets = {
          pager_for: @location,
          right: render(partial: "shared/tab_set", locals: {links: right_links.
                                                                        push(draw_interest_icons(@location))
                                                 })
  }
%>
<hr>
<div class="row">
  <div class="col-sm-6">
    <%= show_previous_version(@location) %>
    <%= set_export_status_controls(@location) %>
  </div>
  <div class="col-sm-6">
    <div class="pull-right">
      <%= show_alt_descriptions(@location, @projects) %>
    </div>
  </div>
  <div class="col-xs-12">
    <%= render(:partial => 'location', :object => @location) %>
  </div>
  <div class="col-xs-12">
    <%= render(:partial => 'comment/show_comments', :locals =>
                                                          {object: @location, controls: true,
                                                           limit: 2}) %>
  </div>
  <div class="col-xs-12">
    <% if @description && @description.has_any_notes? %>
        <hr/>
        <%= show_embedded_description_title(@description, @location) %>
        <%= render(:partial => 'location_description', :object => @description) %>
        <%= render(:partial => 'comment/show_comments', :locals =>
                                                              {object: @description, controls: true,
                                                               limit: 2}) if false %>
        <hr/>
    <% end %>
    <%= show_object_footer(@location) %>
  </div>
</div>





