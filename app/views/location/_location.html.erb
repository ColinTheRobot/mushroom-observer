<div class="row">
  <div class="col-sm-8">
    <%=
        gmap = make_map([location])
        finish_map(gmap)
        gmap.div(:width => "100%", :height => "480px").html_safe
    %>
    <center>
      <%= show_authors_and_editors(location) %>
    </center>
  </div>
  <div class="col-sm-4">
    <div class="row">
      <div class="col-xs-12">
        <center><%= "#{:NORTH.t}: #{location.north}" %>&deg;</center>
      </div>
      <div class="col-xs-12">
        <span class="pull-left"><%= "#{:WEST.t}: #{location.west}" %>&deg;</span>
        <span class="pull-right"><%= "#{:EAST.t}: #{location.east}" %>&deg;</span>
      </div>
      <div class="col-xs-12">
        <center><%= "#{:SOUTH.t}: #{location.south}" %>&deg;</center>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <p>
          <%= "#{:show_location_highest.t}: #{location.high} #{:units_meters.t}" if location.high %>
          <%= "#{:show_location_lowest.t}: #{location.low} #{:units_meters.t}" if location.low %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
        <%= (:NOTES.l + ': ' + location.notes.to_s.html_safe).tpl unless location.notes.blank?%>
  </div>
</div>