<%
   right_links = [
     content_tag(:span, link_with_query(:show_location_create.t, action: :create_location).html_safe, style: "font-size: 1.2em"),
     link_with_query(:list_place_names_map.t, action: :map_locations),
     link_to(:list_countries.t, action: :list_countries)
   ]
   @links.each do |name, link|
     right_links << link_to(name, link)
   end
   @tabsets = {right: render(partial: "shared/tab_set", locals: {links: right_links})}

   @known_pages = @pages
   @known_data = @objects

   if (!@known_pages or @known_pages.empty?) and
           (!@undef_pages or @undef_pages.empty?)
     flash_error(@error) if @error
   end
%>
<div class="results">
  <div class="row">
    <div class="col-md-7">
      <% if @known_pages && @known_pages.num_total > 0 %>
          <div class="h4">
            <%= :list_place_names_known.t %>
            <%= :list_place_names_known_order.t if @default_orders %>
          </div>
          <%= pagination_numbers(@known_pages) %>
          <div class="list-group">
            <% @known_data.each do |location| %>
                <div class="list-group-item">
                  <%= link_with_query(location.display_name.t,
                                      :action => 'show_location', :id => location.id) %>
                </div>
            <% end %>
          </div>
          <%= pagination_numbers(@known_pages) %>
      <% end %>
    </div>
    <div class="col-md-5">
      <% if @undef_data && @undef_pages && @undef_pages.num_total > 0 %>
          <div class="h4"><%= :list_place_names_undef.t %>
            <%= :list_place_names_undef_order.t if @default_orders %></div>
          <%= pagination_numbers(@undef_pages) %>
          <div class="list-group">
            <% @undef_data.each do |loc, cnt|
              loc = Location.reverse_name(loc) if @undef_location_format == :scientific
            %>
                <div class="list-group-item">
                  <%= location_link(loc, nil, cnt) %>
                  <%= link_to(:list_place_names_merge.t,
                              :action => 'list_merge_options',
                              :where => loc) %>
                </div>
            <% end %>
          </div>
          <%= pagination_numbers(@undef_pages) %>
      <% end %>
    </div>
  </div>
</div>