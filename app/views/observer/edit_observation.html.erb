<%
  @title = :edit_observation_title.t(:name => @observation.unique_format_name)

  new_tab_set do
    add_tab_with_query(:cancel_and_show.t(:type => :observation),
      :action => 'show_observation', :id => @observation.id)
  end
%>

      <%= form_tag(add_query_param(:action => 'edit_observation',
            :id => @observation, :approved_name => @what,
            :approved_where => @place_name), { :multipart => true }) do %>
        <br/><center><%= submit_tag :SAVE_EDITS.l %></center><br/>

        <%= render(:partial => 'form_observations', :locals => {
          :action           => 'edit_observation',
          :logging_optional => true,
          :include_naming   => false,
          :include_images   => true,
          :button_name      => :SAVE_EDITS.l,
          :has_specimens    => (@observation.specimens.length > 0)
        }) %>

        <br/><center><%= submit_tag :SAVE_EDITS.l %></center>
      <% end %>
