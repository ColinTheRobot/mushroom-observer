<%
   id = @show_user.id
   name = @show_user.unique_text_name
   @title = :show_user_title.t(:user => name)

   links = {
           comments: url_for(:controller => 'comment',
                             :action => 'show_comments_by_user', :id => id),
           comments_for: url_for(:controller => 'comment',
                                 :action => 'show_comments_for_user', :id => id),
           images: url_for(:controller => 'image', :action => 'images_by_user',
                           :id => id),
           location_descriptions_authors: url_for(:controller => 'location',
                                                  :action => 'location_descriptions_by_author', :id => id),
           location_descriptions_editors: url_for(:controller => 'location',
                                                  :action => 'location_descriptions_by_editor', :id => id),
           locations: url_for(:controller => 'location',
                              :action => 'locations_by_user', :id => id),
           locations_versions: url_for(:controller => 'location',
                                       :action => 'locations_by_editor', :id => id),
           name_descriptions_authors: url_for(:controller => 'name',
                                              :action => 'name_descriptions_by_author', :id => id),
           name_descriptions_editors: url_for(:controller => 'name',
                                              :action => 'name_descriptions_by_editor', :id => id),
           names: url_for(:controller => 'name', :action => 'names_by_user',
                          :id => id),
           names_versions: url_for(:controller => 'name', :action => 'names_by_editor',
                                   :id => id),
           observations: url_for(:controller => 'observer',
                                 :action => 'observations_by_user', :id => id),
           species_lists: url_for(:controller => 'species_list',
                                  :action => 'species_lists_by_user', :id => id),
           life_list: url_for(:controller => 'observer',
                              :action => 'checklist', :user_id => @show_user.id),
   }

   right_links = [link_to(:show_user_contributors.t, :controller => 'observer',
                         :action => 'users_by_contribution')]

   if @show_user == @user
     right_links << link_to(:show_user_your_observations.t, links[:observations])
     right_links << link_to(:show_user_comments_for_you.t, links[:comments_for])
     right_links << link_to(:show_user_your_notifications.t, :controller => "interest",
                           :action => "list_interests")
     right_links << link_to(:show_user_edit_profile.t, :controller => "account",
                            :action => "profile")
     right_links << link_to(:app_preferences.t, :controller => "account", :action => "prefs")
     right_links << link_to(:app_life_list.t, links[:life_list])
   else
     right_links << link_to(:show_user_observations_by.t(:name => name), links[:observations])
     right_links << link_to(:show_user_comments_for.t(:name => name), links[:comments_for])
     right_links << link_to(:show_user_email_to.t(:name => name), :controller => "observer",
                           :action => "ask_user_question", :id => id)
   end

   is_in_admin_mode? ? right_links.concat([link_to(:change_user_bonuses.t, :controller => "observer",
                                                   :action => "change_user_bonuses", :id => @show_user.id),
                                           link_to(:user_alert_create_alert.t, :controller => "account",
                                                   :action => "create_alert", :id => @show_user.id),
                                           link_to(:DESTROY.t, :controller => "account", :action => "destroy_user",
                                                   :id => @show_user.id)]) : right_links

   @tabsets = {pager_for: @show_user,
               right: render(partial: "shared/tab_set", locals: {links: right_links})
   }

   total = 0
   # These are roughly in decreasing order of importance.
   rows = []
   for field in SiteData::ALL_FIELDS - [:users]
     rows << {field: field,
              label: "user_stats_#{field}".to_sym.t,
              count: (count = @user_data[field].to_i),
              weight: (weight = SiteData::FIELD_WEIGHTS[field]),
              points: count * weight, }
   end

   # Add bonuses for translations.
   if @user_data[:languages_itemized]
     for lang, score in @user_data[:languages_itemized]
       rows << {
               label: :show_user_language_contribution.t(:name => lang.name),
               points: score.to_i,
       }
     end
   end

   # Add bonuses at the bottom.
   if @show_user.bonuses
     rows += @show_user.bonuses.map do |points, reason|
       {
               label: reason.to_s.t,
               points: points.to_i,
       }
     end
   end
%>

<div class="row">
  <div class="col-xs-12">
    <p class="push-down">
      <%= thumbnail(@show_user.image_id, {votes: false}) if @show_user.image_id %>
      <strong><%= :show_user_joined.t %>:</strong>  <%= @show_user.verified %>
    </p>
    <% if @show_user.location %>
        <p>
          <strong><%= :show_user_primary_location.t %>:</strong> <%= location_link(nil, @show_user.location) %>
        </p>
    <% end %>
    <% if !@show_user.mailing_address.blank? %>
        <strong><%= :show_user_mailing_address.t %>:</strong>
        <%= @show_user.mailing_address %><br/>
    <% end %>
    <% if !@show_user.notes.blank? %>
        <table>
          <tr>
            <td>
              <%= @show_user.notes.tpl %>
            </td>
          </tr>
        </table>
    <% end %>
    <div>
      <div class="col-sm-3">
        <% if @observations %>
            <% for obs in @observations.values_at(0, 2, 4).reject(&:nil?) %>
                <%= thumbnail(obs.thumb_image,
                              :link => {controller: obs.show_controller, action: obs.show_action, id: obs.id},
                              :votes => true) %>
            <% end %>
        <% end %>
      </div>
      <div class="col-sm-6">
        <center>
        <table>
        <%
           # Do we want to sort by points?
           # rows = rows.sort_by {|row| row[:points]}.reverse
           rows.each do |row|
             field = row[:field]
             label = row[:label]
             count = row[:count]
             weight = row[:weight]
             points = row[:points]
             url = links[field]
             link = url ? link_to(label, url) : label
             total += points
             if !count %>
                <tr>
                  <td colspan="2"><%= label %></td>
                  <td>=</td>
                  <td align="right"><%= points %></td>
                </tr>
            <% elsif !label.blank? %>
                <tr>
                  <td><%= link %></td>
                  <td><%= count %> * <%= weight %></td>
                  <td>=</td>
                  <td align="right"><%= points %></td>
                </tr>
            <% end
               end
               if total > 0 %>
            <tr>
              <td colspan="4">
                <hr/>
              </td>
            </tr>
            <tr>
              <td><%= :show_user_total.t %></td>
              <td></td>
              <td>=</td>
              <td align="right"><%= total %></td>
            </tr>
        <% end %>
        </table>
        <%= :show_user_life_list.t(:genera => @life_list.num_genera,
                                       :species => @life_list.num_species, :url => links[:life_list]) if @life_list.num_species > 0 %>

        </center>
      </div>
      <div class="col-sm-3">
        <% if @observations %>
            <% for obs in @observations.values_at(1, 3, 5).reject(&:nil?) %>
                <%= thumbnail(obs.thumb_image,
                              :link => {controller: obs.show_controller, action: obs.show_action, id: obs.id},
                              :votes => true) %>
            <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>