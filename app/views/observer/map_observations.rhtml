<%
  new_tab_set do
    add_tab(:show_objects.t(:type => :observation), :controller => :observer,
            :action => 'index_observation', :params => query_params(@query))
    add_tab(:show_objects.t(:type => :location), :controller => :location,
            :action => 'index_location', :params => query_params(@query))
  end
%>

<center>
  <%= if @observations.any?
    gmap = make_map(@observations + @locations, :query_params => query_params(@query))
    finish_map(gmap)
    gmap.div(:width => 800, :height => 550)
  else
    :runtime_map_nothing_to_map.t
  end %>
</center>
