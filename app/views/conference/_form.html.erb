<div class="form-group push-down">
  <%= label(:event, :name, :conference_event_name.t) %>:
  <%= text_field(:event, :name, class: "form-control") %>
</div>

<div class="form-group push-down">
  <%= label(:event, :location, :conference_event_location.t) %>:
  <%= text_field(:event, :location, class: "form-control") %>
</div>

<div class="form-group form-inline push-down">
  <%= label(:event, :start, :conference_event_start.t) %>:
  <%= date_select(:event, :start,
                  {start_year: Time.now.year, end_year: Time.now.year + 10, order: [:day,:month,:year]},
                  {class: "form-control"}) %>
</div>

<div class="form-group form-inline">
  <%= label(:event, :end, :conference_event_end.t) %>:
  <%= date_select(:event, :end,
                  {start_year: Time.now.year, end_year: Time.now.year + 10, order: [:day,:month,:year]},
                  {class: "form-control"}) %>
</div>

<div class="form-group push-down">
  <%= label(:event, :description, :conference_event_description.t) %>:
  <%= text_area(:event, :description, rows: 10, class: "form-control") %>
</div>

<div class="form-group push-down">
  <%= label(:event, :registration_note, :conference_event_registration_note.t) %>:
  <%= text_area(:event, :registration_note, rows: 10, class: "form-control") %>
</div>

<%= submit_tag(button.l, class: "btn center-block push-down") %>
