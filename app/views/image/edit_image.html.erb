<%
  @title = :image_edit_title.t(:name => @image.unique_format_name)

  new_tab_set do
    add_tab_with_query(:cancel_and_show.t(:type => :image),
      :action => 'show_image', :id => @image.id)
  end
%>

<%= form_for(:image, :url => add_query_param({ :action => :edit_image, :id => @image })) do |form| %>
  <br/><center><%= submit_tag :SAVE_EDITS.l %></center>

  <table cellpadding="10">
    <tr>
      <td valign="top">
        <%= render(:partial => 'form_images', :locals => {
          :form => form,
          :width => 40,
          :leave_out_original_file_name => false
        }) %>
      </td>
      <td align="center">
        <%= thumbnail(@image, :size => :medium, :border => 0, :votes => true) %>
      </td>
    </tr>
  </table>

  <center><%= submit_tag :SAVE_EDITS.l %></center>
<% end %>
