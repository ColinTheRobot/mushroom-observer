<%
  @title = :show_past_glossary_term_title.t(num: @glossary_term.version, name: @glossary_term.name)
  new_tab_set do
    add_tab(:show_glossary_term.t(glossary_term: @glossary_term.name),
            action: :show_glossary_term, id: @glossary_term.id)
  end
%>

<div class="row">
  <div class="col-xs-8">
    <%= render(partial: "glossary_term", object: @glossary_term,
               locals: {synonyms: false}) %>
  </div>
  <div class="col-xs-4">
    <%= show_past_versions(@glossary_term) %>
  </div>
  <div class="col-xs-12">
    <%= show_object_footer(@glossary_term) %>
  </div>
</div>

