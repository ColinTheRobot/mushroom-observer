<%= submit_tag(button.t, class: "btn center-block push-down") %>

<div class="form-group push-down">
  <%= label(:herbarium, :name, :herbarium_name.t) %>:
  <%= text_field(:herbarium, :name, value: @herbarium_name, class: "form-control") %>
</div>

<div class="form-group push-down form-inline">
  <%= label(:herbarium, :code, :create_herbarium_code.t) %>:
  <%= text_field(:herbarium, :code, size: 8, class: "form-control") %>
</div>

<div class="form-group push-down">
  <%= label(:herbarium, :email, :create_herbarium_email.t) %>:
  <%= text_field(:herbarium, :email, value: @user.email, class: "form-control") %>
</div>

<div class="form-group push-down">
  <%= label(:herbarium, :description, :create_herbarium_description.t) %>
  <%= text_area(:herbarium, :description, rows: 10, class: "form-control") %>
</div>

<div class="form-group push-down">
  <%= label(:herbarium, :place_name, :create_herbarium_location.t) %>:
  <%= text_field(:herbarium, :place_name, class: "form-control") %>
  <% turn_into_location_auto_completer(:herbarium_place_name) %>
</div>

<div class="form-group push-down">
  <%= label(:herbarium, :mailing_address, :create_herbarium_mailing_address.t) %>:
  <%= text_area(:herbarium, :mailing_address, rows: 10, class: "form-control") %>
</div>

<%= submit_tag(button.t, class: "btn center-block push-down") %>
