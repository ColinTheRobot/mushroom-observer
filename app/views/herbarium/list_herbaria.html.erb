<%
  @title ||= :list_herbaria_title.t

  new_tab_set do
    add_tab(:create_herbarium.t, :action => 'create_herbarium')
    add_tabs(@links)
  end

  flash_error(@error) if @error and (!@objects or @objects.empty?)
%>

<%= paginate_block(@pages) do %>
  <% if @objects %>
    <table class="table table-striped" width="100%">
      <% @objects.each do |herbarium| %>
        <tr>
          <td>
            <%= link_with_query(content_tag(:span, herbarium.name.t, class: "ListWhat"),
                  :action => 'show_herbarium', :id => herbarium.id) %>:
            <br/>
            <small><%= herbarium.created_at.web_time %></small>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
<% end %>
