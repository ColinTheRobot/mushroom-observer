<%
  @title ||= :edit_name_title.t(:name => @name.display_name)

  new_tab_set do
    add_tab(:all_objects.t(:type => :name), :action => 'list_names')
    add_tab_with_query(:cancel_and_show.t(:type => :name), :action => 'show_name',
      :id => @name.id)
  end
%>

<%= form_for(:name, :url => add_query_param(:action => :edit_name,
      :id => @name.id)) do |form| %>
  <br/><center><%= submit_tag(:SAVE_EDITS.l) %></center>

  <%= render(:partial => 'form_name', :locals =>
             {form: form}) %>

  <br/><center><%= submit_tag(:SAVE_EDITS.l) %></center>
<% end %>
