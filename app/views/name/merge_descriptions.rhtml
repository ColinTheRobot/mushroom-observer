<%
  @title ||= :merge_descriptions_title.t(:object => @description.format_name)

  new_tab_set do
    add_tab_with_query(:show_object.t(:type => :name), :action => 'show_name',
      :id => @description.parent_id)
    add_tab_with_query(:show_object.t(:type => :name_description),
      :action => 'show_name_description', :id => @description.id)
  end
%>

<%= render(:partial => 'shared/merge_descriptions', :locals =>
           { :description => @description }) %>
