<%
   @title ||= :list_projects_title.t

   new_tab_set(:sort_by_header.t, @sorts)
   new_tab_set do
     add_tab_with_query(:list_projects_add_project.t, :action => 'add_project')
     add_tabs(@links)
   end

   flash_error(@error) if @error and (!@objects or @objects.empty?)
%>

<%= paginate_block(@pages) do %>
    <div class="color-block">
      <% @objects.each do |project| %>
          <div class="row color-block-item">
            <div class="col-xs-12 slight-pad">
              <div>
                <strong>
                <%= link_with_query(project.title.t,
                            :action => 'show_project', :id => project.id) %>
                </strong>
                <br/>
                <small><%= project.created_at.web_time %></small>:
                <span><%= user_link(project.user) %></span>
              </div>
            </div>
          </div>
      <% end %>
    </div>
<% end %>

